#: ../../home/kovid/work/calibre/manual/edit.rst:565
msgid "Miscellaneous Tools"
msgstr ""

# 137589f6b08041a38fafb5156c6ca2ca
#: ../../home/kovid/work/calibre/manual/edit.rst:567
